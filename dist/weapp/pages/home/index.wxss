.home {
  height: 100vh;
  overflow-y: auto;
}
.home .banner {
  width: 100% !important;
}
.home .hot-course-list {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  gap: 10PX;
  width: 90%;
  margin: 20PX auto;
}
.home .hot-course-list .hot-course-item {
  -webkit-flex: 1;
      -ms-flex: 1;
          flex: 1;
}
.home .hot-course-list .hot-course-item .course-icon {
  width: 100%;
  vertical-align: top;
}
.home .course-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  grid-gap: 10PX;
  position: relative;
  padding-bottom: 40PX;
}
.home .course-list .course-card {
  padding: 5PX;
  background: #FFFFFF;
  -webkit-box-shadow: 0PX 0PX 4PX 0PX rgba(1, 6, 27, 0.2);
          box-shadow: 0PX 0PX 4PX 0PX rgba(1, 6, 27, 0.2);
  border-radius: 10PX;
}
.home .course-list .course-card .thumbnail-box {
  overflow: hidden;
}
.home .course-list .course-card .thumbnail-box .image {
  width: 100% !important;
}
.home .course-list .course-card .title {
  color: #333;
}
.home .infinite-load {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

