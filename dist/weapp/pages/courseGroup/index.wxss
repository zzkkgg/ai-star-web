.course-group {
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  height: 100vh;
}
.course-group .group-list {
  width: 35%;
}
.course-group .group-list .group-item {
  border-radius: 10PX 0 0 10PX;
  color: #000;
  margin: 10PX 0;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding: 10PX;
