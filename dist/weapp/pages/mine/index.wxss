.color-box {
  border-radius: 10PX;
  height: 90PX;
  background: #FD7948;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
      -ms-flex-align: center;
          align-items: center;
  padding-left: 20PX;
  padding-right: 20PX;
  overflow: hidden;
}
.color-box .shape {
  position: absolute;
}
.color-box .shape.brown {
  top: 0;
  left: 0;
  background: #E1C296;
}
.color-box .shape.yellow {
  background: #FFC103;
  right: 0;
  bottom: 0;
  width: 35%;
  height: 80%;
  border-radius: 100% 0 0 0;
}

.mine {
  height: 100%;
  background: #e8e8e8;
  padding: 10PX;
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
}
.mine .main-bg-box {
  margin-top: 32vh;
}
.mine .main-bg-box .main-bg {
  width: 80%;
}
.mine .btn-box {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 80PX;
}
.mine .btn-box .btn-login {
  background: #4C52A3;
  width: 90%;
  -webkit-box-shadow: 0PX 0PX 4PX 0PX rgba(1, 6, 27, 0.2);
          box-shadow: 0PX 0PX 4PX 0PX rgba(1, 6, 27, 0.2);
  border-radius: 25PX;
}

